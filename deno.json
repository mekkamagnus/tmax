{
  "tasks": {
    "start": "deno run --allow-read --allow-write --allow-run src/main.ts",
    "dev": "deno run --allow-read --allow-write --allow-run --watch src/main.ts",
    "repl": "deno run --allow-read --allow-write scripts/repl.ts",
    "test-keys": "deno run --allow-read --allow-write scripts/test-keys.ts",
    "test": "deno test --allow-read --allow-write",
    "test:watch": "deno test --allow-read --allow-write --watch",
    "test:coverage": "deno test --allow-read --allow-write --coverage=coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check src/main.ts",
    "bundle": "deno bundle src/main.ts dist/tmax.js",
    "compile": "deno compile --allow-read --allow-write --allow-run --output dist/tmax src/main.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "importMap": "./import_map.json"
}